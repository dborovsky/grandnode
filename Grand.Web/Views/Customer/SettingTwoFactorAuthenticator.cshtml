@model TwoFactorAuthenticationModel
@using Grand.Web.Models.Customer;
@{
    Layout = "_ColumnsTwo";
    //title
    Html.AddTitleParts(T("PageTitle.TwoFactorAuth").Text);
}
@section left
{
    @await Component.InvokeAsync("CustomerNavigation", new { selectedTabId = CustomerNavigationEnum.Courses })
}

    <dt>
        @T("Customer.TwoFactorAuthenticator"):
    </dt>
<dd>
    @if (Model.Is2faEnabled)
    {
        @Html.ActionLink(T("TwoFactorAuthenticator.Disable").Text, "DisableTwoFactorAuthenticator", "Customer", new object { }, new { @class = "btn btn-info login-button" })
    }
    else
    {
        @Html.ActionLink(T("TwoFactorAuthenticator.Enable").Text, "EnableTwoFactorAuthenticator", "Customer", new object { }, new { @class = "btn btn-info login-button" })
    }
</dd>
